--==[ TELEPORT TAB ]==--
local TeleportTab = Window:CreateTab("üß≠ Teleport", nil)
local locations = {
    ["Spawn"] = Vector3.new(0, 3, 0),
    ["Shop"] = Vector3.new(100, 3, 0),
    ["Garden"] = Vector3.new(-50, 3, 25),
    ["Pet Area"] = Vector3.new(75, 3, 50)
}
for name, pos in pairs(locations) do
    TeleportTab:CreateButton({
        Name = "Teleport to "..name,
        Callback = function()
            game.Players.LocalPlayer.Character:MoveTo(pos)
        end
    })
end

--==[ ESP / DIALOG TAB ]==--
local ESPTab = Window:CreateTab("üïµÔ∏è ESP/Dialog UI", nil)
ESPTab:CreateButton({
    Name = "Enable NPC Dialog UI",
    Callback = function()
        for _, npc in pairs(workspace:GetChildren()) do
            if npc:FindFirstChild("Head") and not npc.Head:FindFirstChild("WalvyBillboard") then
                local Billboard = Instance.new("BillboardGui")
                Billboard.Name = "WalvyBillboard"
                Billboard.Size = UDim2.new(0, 100, 0, 40)
                Billboard.AlwaysOnTop = true
                Billboard.Parent = npc.Head

                local TextLabel = Instance.new("TextLabel")
                TextLabel.Size = UDim2.new(1, 0, 1, 0)
                TextLabel.Text = npc.Name
                TextLabel.TextColor3 = Color3.new(1,1,1)
                TextLabel.BackgroundTransparency = 1
                TextLabel.Parent = Billboard
            end
        end
    end
})

-- Walvy ESP Grow a Garden: Egg + Pet Inside, optimized
ESPActive = false
Rayfield:CreateToggle({
    Name = "ESP Telur (Lihat Isi)",
    CurrentValue = false,
    Callback = function(Value)
        ESPActive = Value
        if ESPActive then
            loadstring(game:HttpGet("https://pastebin.com/raw/vhkfpzAW"))() -- ganti dengan raw link GitHub kamu
        end
    end,
})

